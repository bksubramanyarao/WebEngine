{
    "name": "paooolino/Machine",
    "authors": [
        {
            "name": "paooolino",
            "email": "paooolino@gmail.com"
        }
    ],
    "require": {
        "gabordemooij/redbean": "^4.3",
        "ramsey/uuid": "^3.6",
        "cocur/slugify": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Machine\\": "src"
        }
    },
    "scripts": {
        "phpcs": "phpcs src/Machine.php",
        "phpcbf": "phpcbf src/Machine.php",
		"generatedoc": "php phpDocumentor.phar -d src,plugins -t docs",
		"phpunit": "phpunit tests/machine --whitelist src --coverage-html coverage/machine",
		"phpunit_plugins": "phpunit tests/plugins --whitelist plugins --coverage-html coverage/plugins",
		"start": "php -S localhost:8000 -t example"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^5.7"
    }
}
